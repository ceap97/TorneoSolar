@model TorneoSolar.Models.Partido

@{
    ViewData["Title"] = "Editar Partido";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">✏️ Editar Partido</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PartidoId" />
                <div class="form-group mb-3">
                    <label asp-for="FechaHora" class="form-label">Fecha del Partido</label>
                    <input asp-for="FechaHora" class="form-control" type="datetime-local" />
                    <span asp-validation-for="FechaHora" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Ubicacion" class="form-label">Lugar del Partido</label>
                    <input asp-for="Ubicacion" class="form-control" placeholder="Ingrese el lugar del partido" required />
                    <span asp-validation-for="Ubicacion" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="LocalEquipoId" class="form-label">Equipo Local</label>
                    <select asp-for="LocalEquipoId" class="form-select" asp-items="ViewBag.LocalEquipoId" required>
                        <option value="">Seleccione un equipo</option>
                    </select>
                    <span asp-validation-for="LocalEquipoId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="VisitanteEquipoId" class="form-label">Equipo Visitante</label>
                    <select asp-for="VisitanteEquipoId" class="form-select" asp-items="ViewBag.VisitanteEquipoId" required>
                        <option value="">Seleccione un equipo</option>
                    </select>
                    <span asp-validation-for="VisitanteEquipoId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index1" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index1" class="btn btn-outline-secondary">⬅️ Volver a la Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
