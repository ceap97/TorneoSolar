@model IEnumerable<TorneoSolar.Models.Partido>

@foreach (var partido in Model)
{
    <article class="game-result game-result-creative">
        <div class="game-result-main-vertical">
            <div class="game-result-team game-result-team-horizontal game-result-team-first">
                <figure class="game-result-team-figure">
                    <img src="@partido.LocalEquipo.Logo" alt="@partido.LocalEquipo.Nombre" width="31" height="41" />
                </figure>
                <div class="game-result-team-title">
                    <div class="game-result-team-name">@partido.LocalEquipo.Nombre</div>
                </div>
                <div class="game-result-score game-result-score-big @(partido.ResultadosPartido.PuntosLocal > partido.ResultadosPartido.PuntosVisitante ? "game-result-team-win" : "")">
                    @partido.ResultadosPartido.PuntosLocal
                </div>
            </div>
            <span class="game-result-team-divider">VS</span>
            <div class="game-result-team game-result-team-horizontal game-result-team-second">
                <figure class="game-result-team-figure">
                    <img src="@partido.VisitanteEquipo.Logo" alt="@partido.VisitanteEquipo.Nombre" width="31" height="41" />
                </figure>
                <div class="game-result-team-title">
                    <div class="game-result-team-name">@partido.VisitanteEquipo.Nombre</div>
                </div>
                <div class="game-result-score game-result-score-big @(partido.ResultadosPartido.PuntosVisitante > partido.ResultadosPartido.PuntosLocal ? "game-result-team-win" : "")">
                    @partido.ResultadosPartido.PuntosVisitante
                </div>
            </div>
        </div>
        <div class="game-result-footer">
            <ul class="game-result-details">
                <li>@partido.Ubicacion</li>
                <li>
                    <time datetime="@partido.FechaHora.ToString("yyyy-MM-dd")">@partido.FechaHora.ToString("MMMM dd, yyyy")</time>
                </li>
            </ul>
        </div>
    </article>
}
