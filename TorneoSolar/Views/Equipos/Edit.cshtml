@model TorneoSolar.Models.Equipo

@{
    ViewData["Title"] = "Editar Equipo";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">✏️ Editar Equipo</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="EquipoId" />
                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="form-label">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Ciudad" class="form-label">Ciudad</label>
                    <input asp-for="Ciudad" class="form-control" />
                    <span asp-validation-for="Ciudad" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Logo" class="form-label">Logo</label>
                    <input asp-for="Logo" class="form-control" readonly />
                    <input type="file" name="logo" class="form-control" />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index1" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index1" class="btn btn-outline-secondary">⬅️ Volver a la Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
