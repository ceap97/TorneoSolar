@model IEnumerable<TorneoSolar.Models.Equipo>

@{
    ViewData["Title"] = "Equipos";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">🏀 Lista de Equipos</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted">Consulta los detalles de cada equipo.</p>
        <a asp-action="Create" class="btn btn-success btn-sm">➕ Crear Nuevo</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Ciudad)</th>
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center align-middle">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ciudad)</td>
                        <td>
                            <img src="@item.Logo" alt="Logo de @item.Nombre" class="img-thumbnail" style="max-width: 100px;" />
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.EquipoId" class="btn btn-warning btn-sm">✏️ Editar</a>
                            <a asp-action="Details" asp-route-id="@item.EquipoId" class="btn btn-info btn-sm">👀 Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.EquipoId" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">⬅️ Volver al Inicio</a>
    </div>
</div>

