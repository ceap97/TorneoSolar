@model TorneoSolar.Models.SolicitudEquipo

@{
    ViewData["Title"] = "Registro de Equipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col text-center">
            <h2 class="fw-bold text-primary">
                <i class="bi bi-person-plus"></i> Registro de Equipo
            </h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Registro" enctype="multipart/form-data" method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <div class="mb-3">
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <input asp-for="Ciudad" class="form-control" placeholder="Ciudad" />
                            <span asp-validation-for="Ciudad" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-semibold"></label>
                            <input type="file" name="logo" class="form-control" accept="image/*" />
                            <div class="form-text">Formatos permitidos: JPG, PNG, JPEG. Tamaño máximo: 2MB.</div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-send"></i> Enviar Solicitud
                            </button>
                            <a href="/" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (TempData["Mensaje"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: '¡Solicitud enviada!',
                text: 'Un administrador revisará tu registro.',
                confirmButtonText: 'Aceptar'
            });
        </script>
    }
}

