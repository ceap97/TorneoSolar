@model TorneoSolar.Models.Equipo

@{
    ViewData["Title"] = "Detalles del Equipo";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">👀 Detalles del Equipo</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Ciudad)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Ciudad)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Logo)
        </dt>
        <dd class="col-sm-9">
            <img src="@Model.Logo" alt="Logo de @Model.Nombre" class="img-thumbnail" style="max-width: 100px;" />
        </dd>
    </dl>
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.EquipoId" class="btn btn-warning btn-sm">✏️ Editar</a>
        <a asp-action="Index" class="btn btn-outline-secondary">⬅️ Volver a la Lista</a>
    </div>
</div>

