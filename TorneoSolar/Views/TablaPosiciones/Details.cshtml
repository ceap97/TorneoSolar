@model TorneoSolar.Models.TablaPosiciones

@{
    ViewData["Title"] = "Detalles - Tabla de Posiciones";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">📊 Detalles del Registro</h2>
    <p class="text-muted">Información detallada sobre el desempeño de un equipo en la Copa Titanes.</p>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <h4 class="card-title text-dark">📁 Información General</h4>
            <hr />

            <dl class="row">
                <dt class="col-sm-4 fw-bold">Equipo</dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Equipo.Nombre) <!-- Muestra el nombre del equipo -->
                </dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.PJ)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PJ)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.PG)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PG)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.PP)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PP)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Puntos)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Puntos)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.PtsFavor)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PtsFavor)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.PtsContra)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PtsContra)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Diferencia)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Diferencia)</dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">✏️ Editar</a>
                <a asp-action="Index1" class="btn btn-outline-secondary">⬅️ Volver a la Lista</a>
            </div>
        </div>
    </div>
</div>
