@model TorneoSolar.Models.Bracket

@{
    ViewData["Title"] = "Editar Bracket";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h1 class="text-center mb-4">Editar Bracket</h1>

<div class="d-flex justify-content-center">
    <div class="card shadow-sm" style="width: 500px; max-width: 100%;">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="BracketId" />
                <div class="mb-3">
                    <label asp-for="PartidoId" class="form-label"></label>
                    <select asp-for="PartidoId" class="form-select" asp-items="ViewBag.PartidoId"></select>
                    <span asp-validation-for="PartidoId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ResultadoId" class="form-label"></label>
                    <select asp-for="ResultadoId" class="form-select" asp-items="ViewBag.ResultadoId"></select>
                    <span asp-validation-for="ResultadoId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="EquipoLocalId" class="form-label"></label>
                    <select asp-for="EquipoLocalId" class="form-select" asp-items="ViewBag.EquipoLocalId"></select>
                    <span asp-validation-for="EquipoLocalId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="EquipoVisitanteId" class="form-label"></label>
                    <select asp-for="EquipoVisitanteId" class="form-select" asp-items="ViewBag.EquipoVisitanteId"></select>
                    <span asp-validation-for="EquipoVisitanteId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Ronda" class="form-label"></label>
                    <input asp-for="Ronda" class="form-control" />
                    <span asp-validation-for="Ronda" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="TablaPosicionesLocalId" class="form-label"></label>
                    <select asp-for="TablaPosicionesLocalId" class="form-select" asp-items="ViewBag.TablaPosicionesLocalId"></select>
                    <span asp-validation-for="TablaPosicionesLocalId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="TablaPosicionesVisitanteId" class="form-label"></label>
                    <select asp-for="TablaPosicionesVisitanteId" class="form-select" asp-items="ViewBag.TablaPosicionesVisitanteId"></select>
                    <span asp-validation-for="TablaPosicionesVisitanteId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="FechaCreacion" class="form-label"></label>
                    <input asp-for="FechaCreacion" class="form-control" />
                    <span asp-validation-for="FechaCreacion" class="text-danger"></span>
                </div>
                <div class="d-grid">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-link">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
