@model IEnumerable<TorneoSolar.Models.TablaPosicionesFem>

@{
    ViewData["Title"] = "Tabla de Posiciones";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">🏀 Tabla de Posiciones</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted">Consulta el rendimiento de cada equipo.</p>
        <a asp-action="Create" class="btn btn-success btn-sm">➕ Agregar Equipo</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PJ)</th>
                    <th>@Html.DisplayNameFor(model => model.PG)</th>
                    <th>@Html.DisplayNameFor(model => model.PP)</th>
                    <th>@Html.DisplayNameFor(model => model.Puntos)</th>
                    <th>@Html.DisplayNameFor(model => model.PtsFavor)</th>
                    <th>@Html.DisplayNameFor(model => model.PtsContra)</th>
                    <th>@Html.DisplayNameFor(model => model.Diferencia)</th>
                    <th>Equipo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center align-middle">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.PJ)</td>
                        <td>@Html.DisplayFor(modelItem => item.PG)</td>
                        <td>@Html.DisplayFor(modelItem => item.PP)</td>
                        <td>@Html.DisplayFor(modelItem => item.Puntos)</td>
                        <td>@Html.DisplayFor(modelItem => item.PtsFavor)</td>
                        <td>@Html.DisplayFor(modelItem => item.PtsContra)</td>
                        <td>@Html.DisplayFor(modelItem => item.Diferencia)</td>
                        <td>@Html.DisplayFor(modelItem => item.Equipo.Nombre)</td> <!-- Cambié para que muestre el nombre del equipo -->
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏️ Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">👀 Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">⬅️ Volver al Inicio</a>
    </div>
</div>
