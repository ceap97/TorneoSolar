@model TorneoSolar.Models.TablaPosicionesFem

@{
    ViewData["Title"] = "Registrar en Tabla de Posiciones";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">🏀 Registrar en Tabla de Posiciones</h2>
    <p class="text-muted">Llena la información de desempeño del equipo.</p>

    <div class="card shadow-sm mt-4">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="EquipoId" class="form-label">Equipo</label>
                    <select asp-for="EquipoId" class="form-select" asp-items="ViewBag.EquipoId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="PJ" class="form-label">Partidos Jugados</label>
                    <input asp-for="PJ" class="form-control" />
                    <span asp-validation-for="PJ" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PG" class="form-label">Partidos Ganados</label>
                    <input asp-for="PG" class="form-control" />
                    <span asp-validation-for="PG" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PP" class="form-label">Partidos Perdidos</label>
                    <input asp-for="PP" class="form-control" />
                    <span asp-validation-for="PP" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PtsFavor" class="form-label">Puntos a Favor</label>
                    <input asp-for="PtsFavor" class="form-control" />
                    <span asp-validation-for="PtsFavor" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PtsContra" class="form-label">Puntos en Contra</label>
                    <input asp-for="PtsContra" class="form-control" />
                    <span asp-validation-for="PtsContra" class="text-danger"></span>
                </div>

                <!-- Opcional: Si Puntos y Diferencia se calculan en el backend, podrías quitar esto -->
                <div class="mb-3">
                    <label asp-for="Puntos" class="form-label">Puntos</label>
                    <input asp-for="Puntos" class="form-control" />
                    <span asp-validation-for="Puntos" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary">✅ Registrar</button>
                    <a asp-action="Index1" class="btn btn-outline-secondary">⬅️ Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
