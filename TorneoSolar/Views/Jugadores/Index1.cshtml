@model IEnumerable<TorneoSolar.Models.Jugadore>

@{
    ViewData["Title"] = "Jugadores";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">🏀 Lista de Jugadores</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted">Consulta los detalles de cada jugador.</p>
        <a asp-action="Create" class="btn btn-success btn-sm">➕ Crear Nuevo</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.FechaNacimiento)</th>
                    <th>@Html.DisplayNameFor(model => model.Identificacion)</th>
                    <th>@Html.DisplayNameFor(model => model.Peso)</th>
                    <th>@Html.DisplayNameFor(model => model.Altura)</th>
                    <th>@Html.DisplayNameFor(model => model.Posicion)</th>
                    <th>@Html.DisplayNameFor(model => model.Foto)</th>
                    <th>@Html.DisplayNameFor(model => model.Equipo)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center align-middle">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaNacimiento)</td>
                        <td>@Html.DisplayFor(modelItem => item.Identificacion)</td>
                        <td>@Html.DisplayFor(modelItem => item.Peso)</td>
                        <td>@Html.DisplayFor(modelItem => item.Altura)</td>
                        <td>@Html.DisplayFor(modelItem => item.Posicion)</td>
                        <td>
                            @if (item.Foto != null)
                            {
                                <img src="@item.Foto" alt="Foto del jugador" class="img-thumbnail" style="max-width: 100px;" />
                            }
                            else
                            {
                                <span>No image available</span>
                            }
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Equipo.EquipoId)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.JugadorId" class="btn btn-warning btn-sm">✏️ Editar</a>
                            <a asp-action="Details1" asp-route-id="@item.JugadorId" class="btn btn-info btn-sm">👀 Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.JugadorId" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">⬅️ Volver al Inicio</a>
    </div>
</div>


