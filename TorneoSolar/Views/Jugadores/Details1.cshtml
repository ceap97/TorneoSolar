@model TorneoSolar.Models.Jugadore

@{
    ViewData["Title"] = "Detalles del Jugador";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">👀 Detalles del Jugador</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Identificacion)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Identificacion)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Peso)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Peso)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Altura)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Altura)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Posicion)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Posicion)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-9">
            @if (Model.Foto != null)
            {
                <img src="@Model.Foto" alt="Foto del jugador" class="img-thumbnail" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Equipo)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Equipo.EquipoId)
        </dd>
    </dl>
    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.JugadorId" class="btn btn-warning btn-sm">✏️ Editar</a>
        <a asp-action="Index1" class="btn btn-outline-secondary">⬅️ Volver a la Lista</a>
    </div>
</div>


