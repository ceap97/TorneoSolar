@model TorneoSolar.Models.Noticias

@{
    ViewData["Title"] = "Editar Noticia";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">✏️ Editar Noticia</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="NoticiasId" />
                <div class="form-group mb-3">
                    <label asp-for="Titulo" class="form-label">Título</label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Comentario" class="form-label">Comentario</label>
                    <textarea asp-for="Comentario" class="form-control"></textarea>
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Fecha" class="form-label">Fecha</label>
                    <input asp-for="Fecha" class="form-control" type="date" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Imagen" class="form-label">Imagen</label>
                    <input type="file" asp-for="Imagen" class="form-control" />
                    <span asp-validation-for="Imagen" class="text-danger"></span>
                </div>
                @if (Model.Imagen != null)
                {
                    <div class="form-group mb-3">
                        <img src="@Model.Imagen" alt="Imagen de la noticia" class="img-thumbnail" />
                    </div>
                }
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">⬅️ Volver a la Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

