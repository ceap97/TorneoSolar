@model IEnumerable<TorneoSolar.Models.Noticias>

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- En la sección <head> de tu _Layout.cshtml -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />


<!-- Latest News-->
<section class="section section-md bg-gray-100">
    <div class="container">
        <div class="row row-50">
            <div class="col-lg-8">
                <div class="main-component">
                    <!-- Heading Component-->
                    <article class="heading-component">
                        <div class="heading-component-inner">
                            <h5 class="heading-component-title">
                                Ultima Hora
                            </h5><a class="button button-xs button-gray-outline" href="#">Todas las noticias</a>
                        </div>
                    </article>
                    <div class="row row-30">
                        @foreach (var noticia in Model)
                        {
                            <div class="col-md-6">
                                <!-- Post Future-->
                                <article class="post-future">
                                    <a class="post-future-figure" href="#"><img src="@noticia.Imagen" alt="" width="368" height="287" /></a>
                                    <div class="post-future-main">
                                        <h4 class="post-future-title"><a href="#">@noticia.Titulo</a></h4>
                                        <div class="post-future-meta">
                                            <!-- Badge-->
                                            <div class="badge badge-secondary">
                                                The Team
                                            </div>
                                            <div class="post-future-time">
                                                <span class="icon mdi mdi-clock"></span>
                                                <time datetime="@noticia.Fecha.ToString("yyyy-MM-dd")">@noticia.Fecha.ToString("MMMM dd, yyyy")</time>
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="post-future-text">
                                            <p>@noticia.Comentario</p>
                                        </div>
                                        <div class="post-future-footer group-flex group-flex-xs">
                                            <a class="button button-gray-outline" href="#">Read more</a>
                                            <div class="post-future-share">
                                                <div class="inline-toggle-parent">
                                                    <div class="inline-toggle icon material-icons-share"></div>
                                                    <div class="inline-toggle-element">
                                                            <div class="post-future-footer group-flex group-flex-xs">
                                                                <a class="button button-gray-outline" href="#">Read more</a>
                                                                <div class="post-future-share">
                                                                    <div class="inline-toggle-parent">
                                                                        <div class="inline-toggle icon material-icons-share"></div>
                                                                        <div class="inline-toggle-element">
                                                                            <ul class="list-inline">
                                                                                <li>Compartir</li>
                                                                                <!-- Facebook -->
                                                                                <li>
                                                                                    <a class="icon fa-facebook"
                                                                                       href="https://www.facebook.com/sharer/sharer.php?u=@($"{Context.Request.Scheme}://{Context.Request.Host}{Url.Action("Details", "Noticias", new { id = noticia.NoticiasId })}")"
                                                                                       target="_blank" title="Compartir en Facebook">
                                                                                        <i class="fab fa-facebook"></i>
                                                                                    </a>
                                                                                </li>
                                                                                <!-- Instagram (copia el enlace) -->
                                                                                <li>
                                                                                    <a class="icon fa-instagram"
                                                                                       href="javascript:void(0);"
                                                                                       onclick="copiarEnlace('@($"{Context.Request.Scheme}://{Context.Request.Host}{Url.Action("Details", "Noticias", new { id = noticia.NoticiasId })}")')"
                                                                                       title="Compartir en Instagram">
                                                                                        <i class="fab fa-instagram"></i>
                                                                                    </a>
                                                                                </li>
                                                                                <!-- TikTok (copia el enlace) -->
                                                                                <li>
                                                                                    <a class="icon fa-tiktok"
                                                                                       href="javascript:void(0);"
                                                                                       onclick="copiarEnlace('@($"{Context.Request.Scheme}://{Context.Request.Host}{Url.Action("Details", "Noticias", new { id = noticia.NoticiasId })}")')"
                                                                                       title="Compartir en TikTok">
                                                                                        <i class="fab fa-tiktok"></i>
                                                                                    </a>
                                                                                </li>
                                                                            </ul>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </article>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<footer class="section footer-classic footer-classic-dark context-dark">
    <div class="footer-classic-aside footer-classic-darken">
        <div class="container">
            <div class="layout-justify">
                <!-- Rights-->
                <p class="rights"><span>Sportland</span><span>&nbsp;&copy;&nbsp;</span><span class="copyright-year"></span><span>.&nbsp;</span><span>Designed by <a href="https://www.templatemonster.com/products/author/zemez/">Zemez.</a></span></p>
            </div>
        </div>
    </div>
</footer>
@section Scripts {
    <script>
        function copiarEnlace(url) {
            navigator.clipboard.writeText(url).then(function () {
                alert('Enlace copiado al portapapeles. Ahora puedes compartirlo en la app.');
            }, function (err) {
                alert('No se pudo copiar el enlace');
            });
        }
    </script>
}

