@model IEnumerable<TorneoSolar.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Listado de Usuarios</h2>
        <a class="btn btn-success btn-sm" asp-action="Create">➕ Crear Nuevo Usuario</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.NombreUsuario)</th>
                    <th>@Html.DisplayNameFor(model => model.Correo)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center align-middle">
                        <td>@Html.DisplayFor(modelItem => item.NombreUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.UsuarioId">✏️ Editar</a>
                                <a class="btn btn-info text-white" asp-action="Details" asp-route-id="@item.UsuarioId">🔍 Detalles</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UsuarioId">🗑️ Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

