@model TorneoSolar.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">Detalles del Usuario</h2>
    <hr />

    <div class="card shadow p-4">
        <h4 class="card-title text-secondary mb-3">Información del Usuario</h4>

        <dl class="row">
            <dt class="col-sm-4 fw-bold text-end">Nombre de Usuario:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.NombreUsuario)</dd>

            <dt class="col-sm-4 fw-bold text-end">Correo Electrónico:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Correo)</dd>

            <dt class="col-sm-4 fw-bold text-end">Clave:</dt>
            <dd class="col-sm-8">
                <span class="text-muted">(No se muestra por seguridad)</span>
            </dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">⬅️ Volver al listado</a>
            <a asp-action="Edit" asp-route-id="@Model?.UsuarioId" class="btn btn-warning">✏️ Editar Usuario</a>
        </div>
    </div>
</div>
