@model TorneoSolar.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">Crear Nuevo Usuario</h2>
    <p class="text-muted">Completa la información para registrar un nuevo usuario.</p>
    <hr />

    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <form asp-action="Create" class="card shadow p-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="NombreUsuario" class="form-label fw-bold">Nombre de Usuario</label>
                    <input asp-for="NombreUsuario" class="form-control" placeholder="Ingresa el nombre de usuario" />
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Correo" class="form-label fw-bold">Correo Electrónico</label>
                    <input asp-for="Correo" class="form-control" type="email" placeholder="Ingresa el correo electrónico" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Clave" class="form-label fw-bold">Contraseña</label>
                    <input asp-for="Clave" class="form-control" type="password" placeholder="Crea una contraseña segura" />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">⬅️ Volver al listado</a>
                    <button type="submit" class="btn btn-success">✅ Crear Usuario</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
