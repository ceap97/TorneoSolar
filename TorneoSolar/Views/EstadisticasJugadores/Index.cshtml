@model IEnumerable<TorneoSolar.Models.EstadisticasJugadore>

@{
    ViewData["Title"] = "Estadísticas de Jugadores";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary">📊 Lista de Estadísticas de Jugadores</h2>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-muted">Consulta las estadísticas de los jugadores en cada partido.</p>
        <a asp-action="Create" class="btn btn-success btn-sm">➕ Crear Nueva</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark text-center">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Puntos)</th>
                    <th>@Html.DisplayNameFor(model => model.Rebotes)</th>
                    <th>@Html.DisplayNameFor(model => model.Asistencias)</th>
                    <th>@Html.DisplayNameFor(model => model.Bloqueos)</th>
                    <th>@Html.DisplayNameFor(model => model.Robos)</th>
                    <th>@Html.DisplayNameFor(model => model.MinutosJugados)</th>
                    <th>@Html.DisplayNameFor(model => model.Jugador)</th>
                    <th>@Html.DisplayNameFor(model => model.Partido)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center align-middle">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Puntos)</td>
                        <td>@Html.DisplayFor(modelItem => item.Rebotes)</td>
                        <td>@Html.DisplayFor(modelItem => item.Asistencias)</td>
                        <td>@Html.DisplayFor(modelItem => item.Bloqueos)</td>
                        <td>@Html.DisplayFor(modelItem => item.Robos)</td>
                        <td>@Html.DisplayFor(modelItem => item.MinutosJugados)</td>
                        <td>@Html.DisplayFor(modelItem => item.Jugador.JugadorId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Partido.PartidoId)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.EstadisticaId" class="btn btn-warning btn-sm">✏️ Editar</a>
                            <a asp-action="Details" asp-route-id="@item.EstadisticaId" class="btn btn-info btn-sm">👀 Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.EstadisticaId" class="btn btn-danger btn-sm">🗑️ Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">⬅️ Volver al Inicio</a>
    </div>
</div>


